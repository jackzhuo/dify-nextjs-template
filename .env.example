# ==============================================
# Dify NextJS Template 环境变量配置
# ==============================================
# 复制此文件为 .env.local 并配置您的设置

# ==================
# Dify API 配置 (必填)
# ==================

# Dify API Key
# 从 Dify 控制台获取: https://dify.ai
# 格式: app-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_DIFY_API_KEY=

# Dify API 基础URL (可选)
# 默认: https://api.dify.ai/v1
# 如果使用自部署的 Dify 实例，请修改此 URL
NEXT_PUBLIC_DIFY_BASE_URL=https://api.dify.ai/v1

# ==================
# 应用配置
# ==================

# 应用名称 (可选)
NEXT_PUBLIC_APP_NAME=Dify AI 助手

# 应用描述 (可选)
NEXT_PUBLIC_APP_DESCRIPTION=基于Dify API的智能聊天助手

# 默认用户ID (可选)
# 用于标识用户身份，可以是任意字符串
NEXT_PUBLIC_DEFAULT_USER_ID=default-user

# ==================
# 聊天功能配置
# ==================

# 是否启用流式模式 (可选)
# true: 启用流式响应, false: 仅阻塞式响应
NEXT_PUBLIC_ENABLE_STREAMING=true

# 是否启用文件上传 (可选)
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

# 最大文件数量 (可选)
NEXT_PUBLIC_MAX_FILES=5

# 最大文件大小 (字节) (可选)
# 默认: 10MB = 10 * 1024 * 1024
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# 支持的文件类型 (可选)
# 逗号分隔的文件扩展名
NEXT_PUBLIC_ACCEPTED_FILE_TYPES=.txt,.md,.pdf,.doc,.docx,.json,.csv

# ==================
# UI 配置
# ==================

# 是否显示调试信息 (可选)
# 在开发环境中显示消息元数据、Token 使用量等
NEXT_PUBLIC_SHOW_DEBUG_INFO=false

# 是否显示建议问题 (可选)
NEXT_PUBLIC_SHOW_SUGGESTED_QUESTIONS=true

# 主题模式 (可选)
# light: 浅色主题, dark: 深色主题, system: 跟随系统
NEXT_PUBLIC_THEME_MODE=system

# ==================
# 服务端配置 (用于API路由)
# ==================

# 服务端 Dify API Key (可选)
# 如果使用服务端 API 路由代理，建议设置此变量
# 注意: 此变量不应以 NEXT_PUBLIC_ 开头，仅在服务端使用
DIFY_API_KEY=

# 服务端 Dify API URL (可选)
DIFY_BASE_URL=https://api.dify.ai/v1

# ==================
# 安全配置
# ==================

# API 请求超时时间 (毫秒) (可选)
NEXT_PUBLIC_API_TIMEOUT=30000

# 是否启用请求日志 (可选)
NEXT_PUBLIC_ENABLE_REQUEST_LOGGING=false

# ==================
# 部署配置
# ==================

# 网站URL (可选)
# 用于生成绝对URL，在部署时设置
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# 分析工具配置 (可选)
# 如果使用 Google Analytics 等分析工具
NEXT_PUBLIC_GA_ID=

# ==================
# Vercel 部署配置
# ==================

# Vercel 项目配置 (可选)
VERCEL_URL=
VERCEL_ENV=

# ==================
# Cloudflare 部署配置
# ==================

# Cloudflare Pages 配置 (可选)
CF_PAGES_URL=
CF_PAGES_BRANCH=

# ==================
# 开发配置
# ==================

# 开发环境标识 (自动设置)
NODE_ENV=development

# 是否启用 TypeScript 严格模式 (可选)
TYPESCRIPT_STRICT=true

# 是否显示构建分析 (可选)
ANALYZE=false

# Next.js 配置
NEXT_TELEMETRY_DISABLED=1 